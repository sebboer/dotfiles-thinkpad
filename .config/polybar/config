[colors]
;General bar color
background = ${xrdb:color0:#000000}

;Color when you are in a certain workspace and in the i3 module appears with
;an illumination to indicate that you are there.
background-alt = ${xrdb:color1:#000000}

;General font color
foreground = ${xrdb:color5:#ccffff}

;Color of the font when clicking on a module, for example in the current sound module, clicking changes it to "sound muted" 
;with a darker color to indicate that there is no sound.
foreground-alt = ${xrdb:color6:#ccffff}

;Color of the line below that appears to indicate that (in this case) you are in a particular workspace
primary = ${xrdb:color2:}

;Color that changes to red when an urgent window appears in any workspace
alert = ${xrdb:color10:}

;Highlighting Colors
high = ${xrdb:color4:#FFFFFF}

[bar/top]
monitor = ${env:MONITOR:}
width = 100%
height = 34

background = ${colors.background}
foreground = ${colors.foreground}

; Prefer fixed center position for the `modules-center` block
; When false, the center position will be based on the size of the other blocks.;
fixed-center = true

line-size = 16
line-color = ${colors.background}

border-size = 0
border-color = #00000000

border-bottom-size = 0
border-bottom-color = ${colors.foreground-alt}

;Number of spaces to add at the beginning/end of the bar
padding-left = 2
padding-right = 2

font-0 = BitstreamVeraSansMono\ Nerd\ Font\ Mono:style=Book:size=13
font-1 = DejaVuSansMono\ Nerd\ Font\ Mono:style=Book:size=13

;The space left by each module to separate from each other, from left to right.
module-margin-left = 2
module-margin-right = 2

modules-center = mpd 

modules-right = redshift updatenotifier battery backlight pulseaudio date powermenu 

modules-left = spotify

[bar/bottom]
monitor = ${env:MONITOR:}
bottom = true
width = 100%
height = 27

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2

line-color = ${colors.background}
line-size = 2

;Number of spaces to add at the beginning/end of the bar
padding-left = 0
padding-right = 2

spacing = 2
module-margin-left = 2
module-margin-right = 2

border-size = 0
border-color = #00000000

border-top-size = 0
border-top-color = ${colors.foreground-alt}

; The ;5 at the End is the Vertical offset
font-0 = BitstreamVeraSansMono\ Nerd\ Font\ Mono:style=Book:size=13;5
font-1 = DejaVuSansMono\ Nerd\ Font\ Mono:style=Book:size=13;5

modules-left = i3
modules-right = wireless-network filesystem cpu temperature memory

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-default = 

;Probando
fuzzy-match = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-margin = 0.1
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background} 

; focused = Active workspace on focused monitor
label-focused = %index% %icon%
label-focused-background = ${colors.background} 
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% %icon%
label-unfocused-background = ${self.label-focused-background}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index% %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index% %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 4

; Separator between Workspaces
label-separator = |
lable-separator-padding = 1
label-separator-foreground = ${self.label-focused-foreground}

[module/date]
type = internal/date
date = %%{F#878787}%a, %d %b %Y  %%{F#878787}%H:%M%%{F#666}:%%{F#878787}%S%%{F-}

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

poll-interval = 60

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%% 

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-0-foreground = #ff5555
ramp-capacity-1 = 
ramp-capacity-1-foreground = #fba922
ramp-capacity-2 = 
ramp-capacity-2-foreground = #fba922
ramp-capacity-3 = 
ramp-capacity-3-foreground = #aaff77
ramp-capacity-4 = 
ramp-capacity-4-foreground = #aaff77

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

[module/spotify]
type = custom/script
interval = 1
exec = python ~/.config/polybar/scripts/spotify_status.py -f '{artist} | {song}' -t 42
format-prefix = " "
format = <label>
format-background = #1db954
format-foreground = #FAFAFA
format-padding = 2
click-left = playerctl play-pause
click-middle = playerctl previous
click-right = playerctl next

[module/updatenotifier]
type = custom/script
exec = ~/.config/polybar/scripts/update-notifier.sh
interval = 600
format = <label>
format-prefix = " "
click-left = urxvt -e $SHELL -c 'yay -Qu; yay; $SHELL -i' &

[module/backlight]
type = internal/backlight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = intel_backlight

format = <label> <bar>
label =  %percentage%%

; Only applies if <bar> is used
bar-width = 10
bar-indicator = |
bar-fill = ─
bar-empty = ─

[module/redshift]
type = custom/script
exec = ~/.config/polybar/scripts/red.sh
format = <label>
interval = 10
click-left = ~/.config/polybar/scripts/redshift-toggle.sh &>> ~/.config/polybar/scripts/.red-cache 

