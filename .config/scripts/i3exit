#!/usr/bin/env bash

case "$1" in
    lock)
        /usr/bin/betterlockscreen -l
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
	 /usr/bin/betterlockscreen -l & systemctl suspend
        ;;
    hibernate)
        /usr/bin/betterlockscreen -l & systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 [lock|logout|suspend|hibernate|reboot|shutdown]"
        exit 2
esac

exit 0

